        <script>
        function ShowProperties()
        {

          var onaylananSayi=0;

            var bekleyenSayi=0;
            
            var reddedilen=0;
            $.getJSON("./Mekanlar",function(newData){     
               
                          for (var i = 0; i < newData.Mekanlar.length; i++) {
                            if(newData.Mekanlar[i].durumu==1){
                            bekleyenSayi++;
                            $('#myTable tr:last').after(' <tr class="myTr" value="'+ newData.Mekanlar[i].id+'" ><td>'+ newData.Mekanlar[i].il +'</td><td >'+newData.Mekanlar[i].ilce +'</td><td>'+newData.Mekanlar[i].enlem +'</td><td>'+newData.Mekanlar[i].boylam +'</td><td>'+newData.Mekanlar[i].adi +'</td><td>'+newData.Mekanlar[i].icerik+'</td><td>'+newData.Mekanlar[i].adres +'</td><td>'+newData.Mekanlar[i].iletisimkisi +'</td><td>'+newData.Mekanlar[i].telefon +'</td><td>'+newData.Mekanlar[i].eposta +'</td><td><button  class="AddNew" type="submit" id="AddNew">EKLEE</button><button class="DeleteRow" id="DeleteRow">Reddet</button></tr>');
                          }
                            else if(newData.Mekanlar[i].durumu==2)
                            onaylananSayi++;
                     else if(newData.Mekanlar[i].durumu==3)	
                        reddedilen++;	
                	
                  
					}       
        
          $("#leftContent").html('<h4>Bu sayfada '+ bekleyenSayi +' kayıt var.</h4> <a href="/profile" type="submit">Tum kayıtları göster ('+ newData.Mekanlar.length+')</a><br><a href="/onaylananlar" type="submit">Onaylananları Göster ('+ onaylananSayi+')</<a><br><a href="/reddedilenler" type="submit">Reddedilenleri Göster ('+ reddedilen+')</a></p>');   


                  });    
        }
